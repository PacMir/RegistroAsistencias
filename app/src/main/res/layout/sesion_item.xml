<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:background="@drawable/item_border"
    android:elevation="3dp"
    android:paddingHorizontal="12dp"
    android:paddingTop="6dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/duracion"
        style="@style/sesion_icons"
        app:drawableStartCompat="@drawable/ic_time"
        app:layout_constraintEnd_toStartOf="@id/participantes"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/participantes"
        style="@style/sesion_icons"
        app:drawableStartCompat="@drawable/ic_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/dark_grey_title"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duracion" />

    <TextView
        android:id="@+id/modalidad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="1dp"
        android:textColor="@color/text_title"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo" />

    <TextView
        android:id="@+id/responsable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="1dp"
        android:textColor="@color/dark_grey_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modalidad" />

    <TextView
        android:id="@+id/inicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="1dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/fin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/responsable" />

    <TextView
        android:id="@+id/fin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="1dp"
        android:textSize="13sp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/inicio"
        app:layout_constraintTop_toBottomOf="@+id/responsable" />

</androidx.constraintlayout.widget.ConstraintLayout>