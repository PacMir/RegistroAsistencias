<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- EditText -->
    <style name="edit_text_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/dark_grey</item>
    </style>

    <!-- TÃ­tulos -->
    <style name="text_title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Material AlertDialog -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_orange</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_orange</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_orange</item>
    </style>

    <!-- Material Toolbar Menu Overflow -->
    <style name="PopupMenuTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/text_title</item>
    </style>

    <!-- Iconos del RecyclerView de Sesiones -->
    <style name="sesion_icons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/dark_grey_title</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>
    </style>

</resources>